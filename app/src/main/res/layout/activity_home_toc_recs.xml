<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ControlActivity"
    android:paddingTop="30dp"
    android:padding="10dp"
    android:background="@color/dwhite"
    tools:ignore="NamespaceTypo">

    <TextView
        android:id="@+id/title_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:layout_centerHorizontal="true"
        android:text="precision dairy farming"
        android:textColor="@color/Dorminant_1"
        android:textAllCaps="true"
        android:textStyle="bold"
        android:layout_marginTop="130dp"
        android:textSize="22sp"
        />
    <TextView
        android:id="@+id/title_view2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="Discover the essence of"
        android:textColor="@color/Dorminant_1"
        android:textAllCaps="true"
        android:textStyle="bold"
        android:layout_marginTop="50dp"
        android:textSize="22sp"

        />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="320sp"
        android:id="@+id/welcomeCattleId"
        android:paddingTop="90dp"
        android:layout_marginBottom="0dp"
        android:layout_below="@+id/title_view"
        android:src="@drawable/navhometocrecs"
        tools:ignore="MissingConstraints"

        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal"
        android:gravity="center_horizontal"
        android:layout_below="@+id/welcomeCattleId"

        >
    <Button
        android:layout_width="120dp"
        android:layout_height="60dp"
        android:text="Cattle"
        android:layout_gravity="center_horizontal"
        android:layout_marginEnd="30dp"
        android:id="@+id/navHomeTocRec_button"
        android:textAllCaps="false"
        android:shadowColor="@color/dblue"
        android:backgroundTint="@color/Dorminant_1"
        />

        <Button
            android:layout_width="120dp"
            android:layout_height="60dp"
            android:layout_gravity="end"
            android:layout_marginStart="30dp"
            android:text="Milk"
            android:id="@+id/navHomeToDispMilk_button"
            android:textAllCaps="false"
            android:shadowColor="@color/dblue"
            android:backgroundTint="@color/Dorminant_1"
            />

    </LinearLayout>

</RelativeLayout>