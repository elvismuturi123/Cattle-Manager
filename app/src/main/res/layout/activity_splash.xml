<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/Dorminant_1"
    android:orientation="vertical"
    tools:context=".Splash">


    <TextView
        android:layout_gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="70dp"
        android:text="dedan kimathi university"
        android:textStyle="bold"
        android:textAllCaps="true"
        android:textColor="@color/dwhite"
        android:textSize="22sp"

        />

    <TextView
        android:layout_gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:text="DAIRY CATTLE MANAGER"
        android:textStyle="bold"
        android:textColor="@color/dwhite"
        android:textSize="22sp"

        />

    <ImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_gravity="center_horizontal"
        android:background="@color/dwhite"
        android:layout_marginTop="70dp"
        android:src="@drawable/splash2" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="50dp"
        android:text="Your dairy farm in your pocket !"
        android:textColor="@color/dwhite"
        android:textAlignment="center"
        android:textSize="20sp"
        android:textStyle="bold" />
    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="30dp"
        android:backgroundTint="@color/dwhite"
        android:indeterminateTint="@color/dwhite"/>

</LinearLayout>